<link rel="stylesheet" href="/app.css">

<%- include('header') -%>

  <body class="bg">


    <div class="container" id="form-container">
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link" href="#" id="title">To-do List</a>
        </li>
      </ul>
      <div />


      <div class="space">
        <div class="container mt-5">
          <form action="/add/todo" method="POST" class="form-content">
            <input type="text" name="todo" class="form-control" placeholder="Enter Title">
            <!-- <input type="text" name="description" class="form-control" placeholder="Enter Description"> -->
            <input type="submit" value="Add Todo" class="btn btn-primary">
          </form>

          <ul class="list-group my-5" id="list">
            <% for(let i of value){%>
              <li class="list-group-item" id="list-inside">
                <div>
                  <p>
                    <%= i.todo %>
                  </p>
                </div>
                <a href="/delete/todo/?id=<%= i.id %>" class="btn btn-outline-danger btn-sm ">Delete</a>
              </li>
              <%}%>
          </ul>
        </div>
      </div>

  </body>

  </html>
